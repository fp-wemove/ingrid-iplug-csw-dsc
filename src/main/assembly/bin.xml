<?xml version="1.0" encoding="utf-8"?>
<assembly>
  <id>installer</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>core/src/main/release/conf</directory>
      <outputDirectory>${project.build.finalName}/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>core/src/main/release/scripts</directory>
      <outputDirectory>${project.build.finalName}/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/release/ant-installer</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>target/installer</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/site</directory>
      <outputDirectory>${project.build.finalName}/doc</outputDirectory>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>de.ingrid:ingrid-iplug-csw-dsc-core</include>
      </includes>
      <binaries>
        <outputDirectory>${project.build.finalName}/lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <scope>runtime</scope>
            <excludes>
              <exclude>de.ingrid:ingrid-installer</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>de.ingrid:ingrid-iplug-csw-dsc-ui</include>
      </includes>
      <binaries>
        <outputDirectory>${project.build.finalName}/webapp/step1</outputDirectory>
        <unpack>true</unpack>
        <includes>
          <include>target/*.war</include>
        </includes>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
